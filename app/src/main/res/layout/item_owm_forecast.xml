<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="horizontal"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/daytime"
                android:gravity="center_horizontal"
                android:text="@string/daytime"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/day_time_value_OWM_F_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/daytime_value"
                android:gravity="center_horizontal"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textIsSelectable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/temperature"
                android:gravity="center_horizontal"
                android:text="@string/temperature"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/temperature_value_OWM_F_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/temperature_value"
                android:gravity="center_horizontal"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textIsSelectable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/cloudiness"
                android:gravity="center_horizontal"
                android:text="@string/cloudiness"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/cloudiness_value_OWM_F_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/cloudiness_value"
                android:gravity="center_horizontal"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textIsSelectable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/humidity"
                android:gravity="center_horizontal"
                android:text="@string/humidity"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/humidity_value_OWM_F_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/humidity_value"
                android:gravity="center_horizontal"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textIsSelectable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/rain_volume_for_last_3_hours"
                android:gravity="center_horizontal"
                android:text="@string/rain_volume_for_last_3_hours"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/rain_volume_value_OWM_F_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/rain_volume_for_last_3_hours_value"
                android:gravity="center_horizontal"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textIsSelectable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/description"
                android:gravity="center_horizontal"
                android:text="@string/description"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/weather_description_value_OWM_F_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/description_value"
                android:gravity="center_horizontal"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textIsSelectable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/wind_speed"
                    android:gravity="center"
                    android:text="@string/wind_speed"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/wind_speed_value_OWM_F_TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/wind_speed_value"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textIsSelectable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/wind_direction"
                    android:gravity="center"
                    android:text="@string/wind_direction"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/wind_direction_value_OWM_F_TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/wind_direction_value"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textIsSelectable="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/atmospheric_pressure_on_the_ground_level"
                    android:gravity="center"
                    android:text="@string/atmospheric_pressure_on_the_ground_level"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/atmospheric_pressure_on_the_ground_level_in_hPa_value_OWM_F_TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/atmospheric_pressure_on_the_ground_level_value"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textIsSelectable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/atmospheric_pressure_on_the_sea_level"
                    android:gravity="center"
                    android:text="@string/atmospheric_pressure_on_the_sea_level"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/atmospheric_pressure_on_the_sea_level_in_hPa_value_OWM_F_TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/atmospheric_pressure_on_the_sea_level_value"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textIsSelectable="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
