<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyMaterialCardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/MyMaterialSubtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/moon_phase"
                android:text="@string/moon_phase" />

            <TextView
                android:id="@+id/moon_text_value_YW_F_TV"
                style="@style/MyMaterialBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/moon_phase_value"
                android:text="@string/moon_phase_value" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/MyMaterialSubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/sunrise_time"
                    android:text="@string/sunrise_time" />

                <TextView
                    android:id="@+id/sunrise_time_value_YW_F_TV"
                    style="@style/MyMaterialBody1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/sunrise_time_value"
                    android:text="@string/sunrise_time_value" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/MyMaterialSubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/sunset_time"
                    android:text="@string/sunset_time" />

                <TextView
                    android:id="@+id/sunset_time_value_YW_F_TV"
                    style="@style/MyMaterialBody1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/sunset_time_value"
                    android:text="@string/sunset_time_value" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/_12_hours_YW_F_RV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:scrollbars="vertical"
                tools:listitem="@layout/item_yw_time_of_day_forecast" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hours_YW_F_RV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scrollbars="vertical"
                tools:listitem="@layout/item_yw_hour_forecast" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
