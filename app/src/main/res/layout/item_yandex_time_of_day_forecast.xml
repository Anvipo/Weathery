<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:orientation="horizontal"
    app:cardBackgroundColor="?attr/colorButtonNormal"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleValueToDTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title"
            android:gravity="center"
            android:text="@string/title"
            android:textAppearance="?attr/textAppearanceListItem" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/minimum_temperature"
                    android:gravity="center"
                    android:text="@string/minimum_temperature"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/minimumTemperatureValueToDTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/minimum_temperature_value"
                    android:gravity="center"
                    android:text="@string/minimum_temperature_value"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/average_temperature"
                    android:gravity="center"
                    android:text="@string/average_temperature"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/averageTemperatureValueToDTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/average_temperature_value"
                    android:gravity="center"
                    android:text="@string/average_temperature_value"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/maximum_temperature"
                    android:gravity="center"
                    android:text="@string/maximum_temperature"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/maximumTemperatureValueToDTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/maximum_temperature_value"
                    android:gravity="center"
                    android:text="@string/maximum_temperature_value"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/feels_like_temperature"
                android:gravity="center"
                android:text="@string/feels_like_temperature"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/feelsLikeTemperatureValueToDTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/feels_like_temperature_value"
                android:gravity="center"
                android:text="@string/feels_like_temperature_value"
                android:textAppearance="?attr/textAppearanceListItem" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/condition"
                android:gravity="center"
                android:text="@string/condition"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/conditionValueToDTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/condition_value"
                android:gravity="center"
                android:text="@string/condition_value"
                android:textAppearance="?attr/textAppearanceListItem" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/wind_speed"
                    android:gravity="center"
                    android:text="@string/wind_speed"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/windSpeedValueToDTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/wind_speed_value"
                    android:gravity="center"
                    android:text="@string/wind_speed_value"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/wind_gusts_speed"
                    android:gravity="center"
                    android:text="@string/wind_gusts_speed"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/windGustValueToDTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/wind_gusts_speed_value"
                    android:gravity="center"
                    android:text="@string/wind_gusts_speed_value"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/wind_direction"
                    android:gravity="center"
                    android:text="@string/wind_direction"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/windDirectionValueToDTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/wind_direction_value"
                    android:gravity="center"
                    android:text="@string/wind_direction_value"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/atmospheric_pressure_mm_hg"
                    android:gravity="center"
                    android:text="@string/atmospheric_pressure"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/pressureInMmValueToDTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/atmospheric_pressure_mm_hg_value"
                    android:gravity="center"
                    android:text="@string/atmospheric_pressure_value"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/atmospheric_pressure_hPa"
                    android:gravity="center"
                    android:text="@string/atmospheric_pressure"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/pressureInPaValueToDTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/atmospheric_pressure_hPa_value"
                    android:gravity="center"
                    android:text="@string/atmospheric_pressure_value"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/humidity"
                android:gravity="center"
                android:text="@string/humidity"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/humidityInPercentsValueToDTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/humidity_value"
                android:gravity="center"
                android:text="@string/humidity_value"
                android:textAppearance="?attr/textAppearanceListItem" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/precipitation_type"
                    android:gravity="center"
                    android:text="@string/precipitation_type"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/precipitationTypeValueToDTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/precipitation_type_value"
                    android:gravity="center"
                    android:text="@string/precipitation_type_value"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/precipitation_strength"
                    android:gravity="center"
                    android:text="@string/precipitation_strength"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/precipitationStrengthValueToDTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/precipitation_strength_value"
                    android:gravity="center"
                    android:text="@string/precipitation_strength_value"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/precipitation_in_mm"
                    android:gravity="center"
                    android:text="@string/precipitation_in_mm"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/precipitationInMmValueTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/precipitation_in_mm_value"
                    android:gravity="center"
                    android:text="@string/precipitation_value"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/precipitation_in_minutes"
                    android:gravity="center"
                    android:text="@string/precipitation"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/precipitationInMinutesValueTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/precipitation_in_minutes_value"
                    android:gravity="center"
                    android:text="@string/precipitation_value"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/daytime"
                android:gravity="center"
                android:text="@string/daytime"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/daytimeValueToDTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/daytime_value"
                android:gravity="center"
                android:text="@string/daytime_value"
                android:textAppearance="?attr/textAppearanceListItem" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/is_there_polar"
                android:gravity="center"
                android:text="@string/is_there_polar"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/polarValueToDTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/is_there_polar_value"
                android:gravity="center"
                android:text="@string/is_there_polar_value"
                android:textAppearance="?attr/textAppearanceListItem" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/cloudiness"
                android:gravity="center"
                android:text="@string/cloudiness"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/cloudinessValueToDTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/cloudiness_value"
                android:gravity="center"
                android:text="@string/cloudiness_value"
                android:textAppearance="?attr/textAppearanceListItem" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>