<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyMaterialCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_value_YW_ToD_TV"
            style="@style/MyMaterialHeadline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title"
            android:text="@string/title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    style="@style/MyMaterialSecondarySubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/minimum_temperature"
                    android:text="@string/minimum_temperature" />

                <TextView
                    android:id="@+id/minimum_temperature_value_YW_ToD_TV"
                    style="@style/MyMaterialPrimaryBody1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/minimum_temperature"
                    android:text="@string/minimum_temperature" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    style="@style/MyMaterialSecondarySubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/average_temperature"
                    android:text="@string/average_temperature" />

                <TextView
                    android:id="@+id/average_temperature_value_YW_ToD_TV"
                    style="@style/MyMaterialPrimaryBody1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/average_temperature"
                    android:text="@string/average_temperature" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    style="@style/MyMaterialSecondarySubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/maximum_temperature"
                    android:text="@string/maximum_temperature" />

                <TextView
                    android:id="@+id/maximum_temperature_value_YW_ToD_TV"
                    style="@style/MyMaterialPrimaryBody1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/maximum_temperature"
                    android:text="@string/maximum_temperature" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                style="@style/MyMaterialSecondarySubtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/feels_like_temperature"
                android:text="@string/feels_like_temperature" />

            <TextView
                android:id="@+id/feels_like_temperature_value_YW_ToD_TV"
                style="@style/MyMaterialPrimaryBody1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/feels_like_temperature"
                android:text="@string/feels_like_temperature" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                style="@style/MyMaterialSecondarySubtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/condition"
                android:text="@string/condition" />

            <TextView
                android:id="@+id/condition_value_YW_ToD_TV"
                style="@style/MyMaterialPrimaryBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/condition"
                android:text="@string/condition" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    style="@style/MyMaterialSecondarySubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/wind_speed"
                    android:text="@string/wind_speed" />

                <TextView
                    android:id="@+id/wind_speed_value_YW_ToD_TV"
                    style="@style/MyMaterialPrimaryBody1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/wind_speed"
                    android:text="@string/wind_speed" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    style="@style/MyMaterialSecondarySubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/wind_gusts_speed"
                    android:text="@string/wind_gusts_speed" />

                <TextView
                    android:id="@+id/wind_gust_value_YW_ToD_TV"
                    style="@style/MyMaterialPrimaryBody1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/wind_gusts_speed"
                    android:text="@string/wind_gusts_speed" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/MyMaterialSecondarySubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/wind_direction"
                    android:text="@string/wind_direction" />

                <TextView
                    android:id="@+id/wind_direction_value_YW_ToD_TV"
                    style="@style/MyMaterialPrimaryBody1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/wind_direction"
                    android:text="@string/wind_direction" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    style="@style/MyMaterialSecondarySubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/atmospheric_pressure_mm_hg"
                    android:text="@string/atmospheric_pressure" />

                <TextView
                    android:id="@+id/pressure_in_mm_value_YW_ToD_TV"
                    style="@style/MyMaterialPrimaryBody1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/atmospheric_pressure_mm_hg"
                    android:text="@string/atmospheric_pressure" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    style="@style/MyMaterialSecondarySubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/atmospheric_pressure_hPa"
                    android:text="@string/atmospheric_pressure" />

                <TextView
                    android:id="@+id/pressure_in_hPa_value_YW_ToD_TV"
                    style="@style/MyMaterialPrimaryBody1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/atmospheric_pressure_hPa"
                    android:text="@string/atmospheric_pressure" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                style="@style/MyMaterialSecondarySubtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/humidity"
                android:text="@string/humidity" />

            <TextView
                android:id="@+id/humidity_in_percents_value_YW_ToD_TV"
                style="@style/MyMaterialPrimaryBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/humidity"
                android:text="@string/humidity" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    style="@style/MyMaterialSecondarySubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/precipitation_type"
                    android:text="@string/precipitation_type" />

                <TextView
                    android:id="@+id/precipitation_type_value_YW_ToD_TV"
                    style="@style/MyMaterialPrimaryBody1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/precipitation_type"
                    android:text="@string/precipitation_type" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    style="@style/MyMaterialSecondarySubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/precipitation_strength"
                    android:text="@string/precipitation_strength" />

                <TextView
                    android:id="@+id/precipitation_strength_value_YW_ToD_TV"
                    style="@style/MyMaterialPrimaryBody1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/precipitation_strength"
                    android:text="@string/precipitation_strength" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    style="@style/MyMaterialSecondarySubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/precipitation_in_mm"
                    android:text="@string/precipitation_in_mm" />

                <TextView
                    android:id="@+id/precipitation_in_mm_value_YW_ToD_TV"
                    style="@style/MyMaterialPrimaryBody1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/precipitation_in_mm"
                    android:text="@string/precipitation" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    style="@style/MyMaterialSecondarySubtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/precipitation_in_minutes"
                    android:text="@string/precipitation" />

                <TextView
                    android:id="@+id/precipitation_in_minutes_value_YW_ToD_TV"
                    style="@style/MyMaterialPrimaryBody1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/precipitation_in_minutes"
                    android:text="@string/precipitation" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                style="@style/MyMaterialSecondarySubtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/daytime"
                android:text="@string/daytime" />

            <TextView
                android:id="@+id/daytime_value_YW_ToD_TV"
                style="@style/MyMaterialPrimaryBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/daytime"
                android:text="@string/daytime" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                style="@style/MyMaterialSecondarySubtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/is_there_polar"
                android:text="@string/is_there_polar" />

            <TextView
                android:id="@+id/polar_value_YW_ToD_TV"
                style="@style/MyMaterialPrimaryBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/is_there_polar"
                android:text="@string/is_there_polar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/MyMaterialSecondarySubtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/cloudiness"
                android:text="@string/cloudiness" />

            <TextView
                android:id="@+id/cloudiness_value_YW_ToD_TV"
                style="@style/MyMaterialPrimaryBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/cloudiness"
                android:text="@string/cloudiness" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>